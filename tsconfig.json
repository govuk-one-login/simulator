{
  "compilerOptions": {
    "module": "nodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodeNext",
    "resolveJsonModule": true,
    "target": "ES2022", 
    "strict": true,
    "sourceMap": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": ["@types", "node_modules/@types"],
    "lib": ["ES2023"],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["tests", "coverage", "src/**/**/tests"]
}
